<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_room_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_room_txt_id"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="1"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/list_item_room_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textColor="@color/purple_700"/>

        <TextView
            android:id="@+id/list_item_room_txt_game_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/list_item_room_txt_host_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="TextView"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_room_img_lock"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/unlocked" />

</LinearLayout>